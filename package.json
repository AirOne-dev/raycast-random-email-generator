{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "email",
  "title": "Email",
  "description": "Generate a random email address",
  "icon": "mail-icon.png",
  "author": "AirOne",
  "owner": "daryl-social-software",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "random",
      "title": "Random",
      "description": "Generate a random email address",
      "mode": "no-view",
      "preferences": [
        {
          "name": "email_domain",
          "title": "Email domain",
          "description": "Domain of the email address (what is after the @)",
          "type": "textfield",
          "default": "gmail.com",
          "required": true
        }
      ],
      "arguments": [
        {
          "name": "type",
          "type": "text",
          "placeholder": "f"
        }
      ]
    },
    {
      "name": "history",
      "title": "History",
      "description": "History of generated email addresses",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@raycast/api": "^1.48.9",
    "@raycast/utils": "^1.5.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@raycast/eslint-config": "2.0.4",
    "@types/node": "22.15.2",
    "@types/react": "19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.6.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "login": "ray login",
    "publish": "npx @raycast/api@latest publish"
  }
}
